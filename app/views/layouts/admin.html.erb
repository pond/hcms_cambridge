    <meta name="viewport" content="initial-scale=0.8">

    <title>Cambridge Punting Company: Admin</title>

    <%= stylesheet_link_tag    'admin', media: 'all' %>
    <%= javascript_include_tag 'admin'               %>
    <%= csrf_meta_tags %>
