<%
  google_ad_id = ENV['GOOGLE_AD_ID']
  unless google_ad_id.blank?
-%>
<!-- Global site tag (gtag.js) - Google Ads: <%= google_ad_id %> -->
<script async src="https://www.googletagmanager.com/gtag/js?id=AW-<%= google_ad_id %>"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', 'AW-<%= google_ad_id %>');
</script>
<% end -%>