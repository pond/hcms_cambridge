<%= form_for :convert_to_blog, path: admin_page_convert_to_blog_path(page_id: @page.id), method: :post do |f| %>
  <% @page.children.each_with_index do |child, index |-%>
    <h2>Article <%= index + 1 %>: <%= child.title %></h2>
    <%= f.label "summary_#{index}", 'Article summary' %><br />
    <%= f.text_area "summary_#{index}", value: child.summarise, rows: 3, cols: 60 %>
  <% end -%>
<% end -%>
